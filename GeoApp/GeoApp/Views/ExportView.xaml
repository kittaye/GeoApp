<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoApp.ExportView"
             xmlns:local="clr-namespace:GeoApp"
             Title = "Export"
             BackgroundColor="Default">
    
    <ContentPage.BindingContext>
        <local:ExportViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,0,0,0" Text="Export GeoJSON Data"
                   TextColor="Black"
                   FontSize="Large"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <Entry Text="{Binding EmailEntry}" AutomationId="emailEntered" Margin="50,20,50,30" Placeholder="e.g. myemail123@example.com"/>

            <Button AutomationId="ExportButton" Margin="20,20,20,150" Text="Email" Command="{Binding ExportButtonClickCommand}"/>

            <Label Margin="0,0,0,40" Text="Share GeoJSON Data" TextColor="Black" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Button AutomationId="ShareButton" Margin="20,20,20,20" Text="Share" Command="{Binding ShareButtonClickCommand}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>