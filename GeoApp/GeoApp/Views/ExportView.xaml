<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoApp.ExportView"
             xmlns:local="clr-namespace:GeoApp"
             Title = "Export"
             BackgroundColor="Default">
    
    <ContentPage.BindingContext>
        <local:ExportViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,30,0,0"
                   Text="Export GeoJSON Data"
                   TextColor="Black"
                   FontSize="Large"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Entry Margin="20,0,20,0" Text="{Binding EmailEntry}" AutomationId="emailEntered" Placeholder="Email"/>
            <Button Margin="20,0,20,0" AutomationId="ExportButton"  Text="Send" Command="{Binding ExportButtonClickCommand}"/>

            <Label  Margin="0,10,0,0" Text="OR" TextColor="Black" FontSize="Default" FontAttributes="Bold" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

            <Label  Margin="0,10,0,0" Text="Share GeoJSON Data" TextColor="Black" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Button Margin="20,10,20,80" AutomationId="ShareButton" Grid.Row="12" Grid.Column="0" Text="Share" Command="{Binding ShareButtonClickCommand}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>