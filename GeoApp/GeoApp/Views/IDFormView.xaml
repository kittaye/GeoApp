<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GeoApp.IDFormView"
             xmlns:local="clr-namespace:GeoApp"
             Title="Welcome to Groundsman"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.ModalPresentationStyle="FormSheet"
             BackgroundColor="{DynamicResource bgPrimary}">
    <ContentPage.BindingContext>
        <local:IDFormViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <FlexLayout Direction="Column">
            <Image Source="welcome_screen.png" Aspect="AspectFill" />
            <StackLayout HeightRequest="350">
                <Entry Text="{Binding IDEntry}" AutomationId="IDText" Margin="20,20,20,0" Placeholder="e.g. Bob, n1234567, ..." />
                <Button Text="Submit" AutomationId="IDSubmit" Margin="20,20,20,20" Command="{Binding IDSubmitCommand}">
                    <Button.TextColor>
                        <OnPlatform x:TypeArguments="Color" iOS="#4CAF50" Android="White" />
                    </Button.TextColor>
                </Button>
            </StackLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>