<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoApp.IDFormView"
             xmlns:local="clr-namespace:GeoApp"
             Title = "Welcome to GeoApp"
             BackgroundColor="Default"
             >

    <ContentPage.BindingContext>
        <local:IDFormViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Image Source="splash.png"
                          Aspect="AspectFill"
                   ></Image>


            <Entry Text="{Binding IDEntry}" AutomationId="IDText" Margin="20,20,20,0" Placeholder="e.g. Bob, n1234567, ..."/>
            <Button Text="Submit" AutomationId="IDSubmit" Margin="20,20,20,20" Command="{Binding IDSubmitCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>